<!doctype html>
<html lang="">
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
	<title>@ViewData["Title"] - Alex</title>

	<environment names="Development">
		<link rel="stylesheet" href="~/lib/semantic/dist/semantic.css" />
		<link rel="stylesheet" href="~/css/site.css" />
	</environment>
	<environment names="Staging,Production">
		<link rel="stylesheet" href="https://oss.maxcdn.com/semantic-ui/2.1.8/semantic.min.css"
			  asp-fallback-href="~/lib/semantic/dist/semantic.min.css"
			  asp-fallback-test-class="ui button" asp-fallback-test-property="cursor" asp-fallback-test-value="pointer" />
		<link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
	</environment>
</head>
<body class="index">

<!-- Page Contents -->
<div class="pusher">
	<div class="full height">
		<div id="navbar" class="following bar">
			<div class="ui container">
				<div class="ui large secondary network menu inverted">
					<menulink class="item" controller-name="Home" action-name="Index" menu-text="Home"></menulink>
					<menulink class="item" controller-name="SwarmCalculator" controller-wildcard="true" action-name="Index" menu-text="Swarm Calculator"></menulink>
				</div>
			</div>
		</div>

		@RenderBody()
	</div>

	<div class="ui black inverted vertical footer segment">
		<div class="ui center aligned container">
			<div class="ui stackable inverted grid">
				<div class="three wide column">
					<h4 class="ui inverted header">Internet</h4>
					<div class="ui inverted link list">
						<a class="item" href="https://www.github.com/0xdeafcafe" target="_blank">Github</a>
						<a class="item" href="https://www.twitter.com/0xdeafcafe" target="_blank">Twitter</a>
						<a class="item" href="https://www.reddit.com/u/xerax" target="_blank">Reddit</a>
						<a class="item" href="https://www.keybase.io/0xdeafcafe" target="_blank">Keybase</a>
						<a class="item" href="https://www.xbox.com/PhoenixBanTrain" target="_blank">Xbox</a>
					</div>
				</div>
				<div class="three wide column">
					<h4 class="ui inverted header">Projects</h4>
					<div class="ui inverted link list">
						<a class="item" href="https://www.helm.global/" target="_blank">Helm Global</a>
						<a class="item" href="https://www.github.com/XboxChaos/Assembly">Assembly</a>
						<a class="item" href="https://www.baelor.io/">Baelor.io</a>
						<a class="item" href="https://www.github.com/TheTree/Branch">Branch</a>
					</div>
				</div>
				<div class="seven wide right floated column">
					<h4 class="ui inverted teal header">
						Put something here
					</h4>
					<p>
						Fill this with sort of content... Yeah, coooo
					</p>
					<button type="submit" class="ui large teal button">Totes</button>
				</div>
			</div>
			<div class="ui inverted section divider"></div>
			<div class="ui horizontal inverted small divided link list">
				<a class="item" href="https://i.imgur.com/EE3bA7I.png?no_redirect" target="_blank">
					gossip girl &copy; @DateTime.UtcNow.Year
					<small>
						xoxo
					</small>
				</a>
			</div>
		</div>
	</div>

	<environment names="Development">
		<script src="~/lib/jquery/dist/jquery.js"></script>
		<script src="~/lib/semantic/dist/semantic.js"></script>
		<script src="~/js/site.js"></script>
	</environment>
	<environment names="Staging,Production">
		<script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.3.min.js"
				asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
				asp-fallback-test="window.jQuery">
		</script>
		<script src="https://oss.maxcdn.com/semantic-ui/2.1.8/semantic.min.js"
				asp-fallback-src="~/lib/semantic/dist/semantic.min.js"
				asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
		</script>
		<script src="~/js/site.min.js" asp-append-version="true"></script>
	</environment>

	<script>
		$(window).scroll(function () {
			var scroll = $(window).scrollTop();
			if (scroll >= 120) {
				$("#navbar").addClass("undocked");
				$("#navbar .menu").removeClass("inverted");
			} else {
				$("#navbar").removeClass("undocked");
				$("#navbar .menu").addClass("inverted");
			}
		});
	</script>

	@RenderSection("scripts", required: false)
</body>
</html>
